{
  "$schema":"https://docs.renovatebot.com/renovate-schema.json",
  "automergeType":"branch",
  "baseBranches":[
     "master"
  ],
  "branchConcurrentLimit":0,
  "branchNameStrict":true,
  "dependencyDashboard":false,
  "enabledManagers":[
     "asdf",
     "gomod",
     "github-actions",
     "npm",
     "dockerfile",
     "regex"
  ],
  "extends":[
     "config:base",
     ":disableDependencyDashboard",
     ":semanticCommitTypeAll(ci)"
  ],
  "gitAuthor":"NearForm Renovate App Bot <115552475+nearform-renovate-app[bot]@users.noreply.github.com>",
  "packageRules":[
     {
        "matchUpdateTypes":[
           "minor",
           "patch"
        ],
        "automerge":true
     }
  ],
  "platform":"github",
  "platformAutomerge":true,
  "prConcurrentLimit":0,
  "rebaseWhen":"auto",
  "repositories":[
     "nearform/k8s-kurated-addons-cli"
  ],
  "username":"nearform-renovate-app[bot]",
  "regexManagers":[
     {
        "fileMatch":[
           "^src/utils/defaults/defaults\\.go$"
        ],
        "matchStrings":[
           "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sconst Default.*RuntimeVersion = \"(?<currentValue>.*?)\""
        ],
        "versioningTemplate":"{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
     },
     {
      "fileMatch": ["^src/utils/defaults/defaults\\.go$"],
      "matchStrings": ["DefaultGoRuntimeVersion=\"(?<currentValue>.*?)\""],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases"
    }
  ]
}
